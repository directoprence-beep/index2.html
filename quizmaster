<script>
// QUESTION BANK
const QUESTION_BANK = [
{q:"Which of the following is the basic unit of life?", options:["Tissue","Organ","Cell","System"], answer:2},
{q:"Which type of reaction absorbs heat from the surroundings?", options:["Exothermic","Endothermic","Combustion","Neutralization"], answer:1},
{q:"What is the SI unit of force?", options:["Joule","Newton","Watt","Pascal"], answer:1},
{q:"Which gas is released during photosynthesis?", options:["Carbon dioxide","Oxygen","Nitrogen","Hydrogen"], answer:1},
{q:"What is the formula for density?", options:["Mass Ã— Volume","Volume Ã· Mass","Mass Ã· Volume","Mass âˆ’ Volume"], answer:2},
{q:"Which part of the atom has a positive charge?", options:["Electron","Neutron","Proton","Nucleus"], answer:2},
{q:"Which of the following is a renewable resource?", options:["Coal","Petroleum","Natural gas","Solar energy"], answer:3},
{q:"What type of motion is shown by a swinging pendulum?", options:["Circular","Rectilinear","Periodic","Random"], answer:2},
{q:"Which vitamin is produced when skin is exposed to sunlight?", options:["Vitamin A","Vitamin B","Vitamin C","Vitamin D"], answer:3},
{q:"Which organ pumps blood?", options:["Brain","Lungs","Heart","Kidney"], answer:2}
];

// DISPLAY QUESTIONS
const questionDiv = document.getElementById("questions");

QUESTION_BANK.forEach((item, index) => {
    let qHTML = `<div class="bg-gray-50 p-4 rounded-lg">
    <p class="font-semibold mb-2">${index+1}. ${item.q}</p>`;
    item.options.forEach((opt, i) => {
        qHTML += `
        <label class="block">
            <input type="radio" name="q${index}" value="${i}" class="mr-2">
            ${opt}
        </label>`;
    });
    qHTML += `</div>`;
    questionDiv.innerHTML += qHTML;
});

// SUBMIT QUIZ
document.getElementById("quizForm").addEventListener("submit", function(e){
    e.preventDefault();

    const studentName = document.getElementById("studentName").value.trim();
    if(studentName === ""){
        alert("Please enter student name.");
        return;
    }

    let score = 0;
    let correct = 0;

    QUESTION_BANK.forEach((q, i) => {
        const selected = document.querySelector(`input[name="q${i}"]:checked`);
        if(selected && parseInt(selected.value) === q.answer){
            score++;
            correct++;
        }
    });

    const incorrect = QUESTION_BANK.length - correct;
    const percentage = ((score / QUESTION_BANK.length) * 100).toFixed(2);

    document.getElementById("result").classList.remove("hidden");
    document.getElementById("scoreText").innerText = `Score: ${score} / 10`;
    document.getElementById("percentageText").innerText = `Percentage: ${percentage}%`;
    document.getElement
